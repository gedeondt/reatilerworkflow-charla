{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://retailer-workflow/specs/reservation.json",
  "title": "Reservation",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "reservationId": {
      "type": "string"
    },
    "orderId": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/ReservationItem"
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "PENDING",
        "RESERVED",
        "COMMITTED",
        "RELEASED",
        "FAILED"
      ]
    }
  },
  "required": [
    "reservationId",
    "orderId",
    "items",
    "status"
  ],
  "definitions": {
    "ReservationItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sku": {
          "type": "string"
        },
        "qty": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "sku",
        "qty"
      ]
    }
  }
}
